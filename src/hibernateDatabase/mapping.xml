<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.model.User" table="user">
      <meta attribute="class-description">
         This class contains the user detail. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="name" column="name" type="string"/>
      <property name="phoneNumber" column="phoneNumber" type="string"/>
      <property name="city" column="city" type="string"/>
      <property name="comingDate" column="comingDate" type="string"/>
      <property name="returnDate" column="returnDate" type="string"/>
      <property name="numberOfPeople" column="numberOfPeople" type="int"/>
      <property name="roomAlloted" column="roomAlloted" type="int"/>
      <property name="isCheckedOut" column="isCheckedOut" type="int"/>
   </class>
   <class name="com.model.Rooms" table="rooms">
   	<meta attribute="class-description">
         This class contains the room detail. 
      </meta>
      <id name="roomNumber" type="int" column="roomNumber">
         <generator class="native"/>
      </id>
      <property name="capacity" column="capacity" type="int"/>
      <property name="id" column="id" type="int"/>
      <property name="numberOfPeopleStaying" column="numberOfPeopleStaying" type="int"/>
      <property name="cityString" column="cityString" type="string"/>
      <property name="type" column="type" type="string"/>
   </class>
</hibernate-mapping>